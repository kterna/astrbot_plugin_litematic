{
    "version": "1.0",
    "description": "特殊方块的材质映射配置",

    "block_types": {
        "stairs": {
            "description": "楼梯类方块",
            "matching": ["stairs"],
            "facing_mapping": {
                "north": {
                    "top": "top",
                    "front": "front",
                    "side": "side",
                    "bottom": "bottom"
                },
                "south": {
                    "top": "top",
                    "front": "back",
                    "side": "side",
                    "bottom": "bottom"
                },
                "east": {
                    "top": "top",
                    "front": "side",
                    "side": "front",
                    "bottom": "bottom"
                },
                "west": {
                    "top": "top",
                    "front": "side",
                    "side": "back",
                    "bottom": "bottom"
                }
            }
        },

        "slab": {
            "description": "台阶方块",
            "matching": ["_slab"],
            "face_mapping": {
                "top": ["{name}_top", "{name}", "default"],
                "bottom": ["{name}_bottom", "{name}", "default"],
                "side": ["{name}_side", "{name}", "default"],
                "front": ["{name}_side", "{name}", "default"]
            }
        },

        "trapdoor": {
            "description": "活板门类方块",
            "matching": ["trapdoor"],
            "default_texture": "{name}"
        },

        "redstone_repeater": {
            "description": "红石中继器",
            "matching": ["repeater"],
            "texture_variants": ["repeater_on", "repeater"],
            "facing_rotation": {
                "top": true,
                "rotation_angles": {
                    "north": 0,
                    "east": 270,
                    "south": 180,
                    "west": 90
                }
            }
        },

        "redstone_comparator": {
            "description": "红石比较器",
            "matching": ["comparator"],
            "texture_variants": ["comparator_on", "comparator"],
            "facing_rotation": {
                "top": true,
                "rotation_angles": {
                    "north": 0,
                    "east": 270,
                    "south": 180,
                    "west": 90
                }
            }
        },

        "observer": {
            "description": "观察者方块",
            "matching": ["observer"],
            "face_mapping": {
                "front": "observer_front",
                "back": ["observer_back_on", "observer_back"],
                "side": "observer_side",
                "top": "observer_top",
                "bottom": "observer_side"
            }
        },

        "piston": {
            "description": "活塞类方块",
            "matching": ["piston"],
            "face_mapping": {
                "front": "{name}_inner",
                "back": "{name}_side",
                "side": "{name}_side",
                "top": "{name}_inner",
                "bottom": "{name}_bottom",
                "inner": "{name}_inner"
            }
        },

        "redstone_wire": {
            "description": "红石线",
            "matching": ["redstone_wire"],
            "default_texture": "redstone_dust"
        },

        "redstone_wall_torch": {
            "description": "墙上的红石火把",
            "matching": ["redstone_wall_torch"],
            "texture_variants": ["redstone_torch", "redstone_torch_on", "default"]
        },

        "hopper": {
            "description": "漏斗",
            "matching": ["hopper"],
            "face_mapping": {
                "top": "hopper_top",
                "bottom": "transformed:hopper_outside:bottom",
                "side": "transformed:hopper_outside:side",
                "front": "transformed:hopper_outside:side"
            },
            "texture_transforms": {
                "hopper_outside:side": {
                    "type": "custom",
                    "method": "transform_hopper_side",
                    "source": "hopper_outside"
                },
                "hopper_outside:bottom": {
                    "type": "custom",
                    "method": "transform_hopper_bottom",
                    "source": "hopper_outside"
                }
            }
        },

        "logs": {
            "description": "木头",
            "matching": ["_log", "_stem"],
            "face_mapping": {
                "top": "{name}_top",
                "bottom": "{name}_top",
                "side": "{name}",
                "front": "{name}",
                "back": "{name}"
            }
        },

        "stripped_logs": {
            "description": "去皮木头",
            "matching": ["stripped_"],
            "face_mapping": {
                "top": "{name}_top",
                "bottom": "{name}_top",
                "side": "{name}",
                "front": "{name}",
                "back": "{name}"
            }
        },

        "door": {
            "description": "门",
            "matching": ["_door"],
            "face_mapping": {
                "top": "{name}_top",
                "bottom": "{name}_bottom",
                "side": "{name}_top",
                "front": "{name}_top"
            }
        },

        "furnace": {
            "description": "熔炉",
            "matching": ["furnace", "smoker", "blast_furnace"],
            "face_mapping": {
                "top": "{name}_top",
                "bottom": "{name}_top",
                "side": "{name}_side",
                "front": "{name}_front"
            }
        },

        "glazed_terracotta": {
            "description": "带釉陶瓦",
            "matching": ["glazed_terracotta"],
            "facing_rotation": {
                "top": true,
                "rotation_angles": {
                    "north": 0,
                    "east": 270,
                    "south": 180,
                    "west": 90
                }
            }
        },

        "quartz_pillar": {
            "description": "石英柱",
            "matching": ["quartz_pillar"],
            "face_mapping": {
                "top": "quartz_pillar_top",
                "bottom": "quartz_pillar_top",
                "side": "quartz_pillar",
                "front": "quartz_pillar"
            }
        },

        "quartz_block": {
            "description": "石英块",
            "matching": ["quartz_block"],
            "face_mapping": {
                "top": "quartz_block_top",
                "bottom": "quartz_block_bottom",
                "side": "quartz_block_side",
                "front": "quartz_block_side"
            }
        },

        "shulker_box": {
            "description": "潜影盒",
            "matching": ["shulker_box"],
            "default_texture": "{name}"
        },

        "mushroom_block": {
            "description": "蘑菇方块",
            "matching": ["mushroom_block"],
            "default_texture": "mushroom_block_inside"
        },

        "structure_block": {
            "description": "结构方块",
            "matching": ["structure_block"],
            "texture_variants": [
                "structure_block",
                "structure_block_corner",
                "structure_block_data",
                "structure_block_load",
                "structure_block_save"
            ]
        },

        "smithing_table": {
            "description": "锻造台",
            "matching": ["smithing_table"],
            "face_mapping": {
                "top": "{name}_top",
                "bottom": "{name}_bottom",
                "side": "{name}_side",
                "front": "{name}_front"
            }
        },

        "enchanting_table": {
            "description": "附魔台",
            "matching": ["enchanting_table"],
            "face_mapping": {
                "top": "{name}_top",
                "bottom": "{name}_bottom",
                "side": "{name}_side"
            }
        },

        "respawn_anchor": {
            "description": "重生锚",
            "matching": ["respawn_anchor"],
            "face_mapping": {
                "top": "{name}_top",
                "bottom": "{name}_bottom",
                "side": "{name}_side"
            }
        },

        "crops": {
            "description": "农作物",
            "matching": ["beetroots_stage", "wheat_", "carrots_", "potatoes_"],
            "default_texture": "{name}"
        },

        "roots": {
            "description": "根",
            "matching": ["_roots"],
            "default_texture": "{name}"
        },

        "potted_plants": {
            "description": "盆栽植物",
            "matching": ["_pot"],
            "default_texture": "{name}"
        },

        "melon": {
            "description": "西瓜",
            "matching": ["melon"],
            "face_mapping": {
                "top": "melon_top",
                "bottom": "melon_top",
                "side": "melon_side",
                "front": "melon_side"
            }
        },

        "tall_flowers": {
            "description": "高花",
            "matching": ["sunflower", "rose_bush", "peony", "lilac"],
            "face_mapping": {
                "top": "{name}_top",
                "bottom": "{name}_bottom"
            }
        },

        "sculk": {
            "description": "幽匿方块",
            "matching": ["sculk"],
            "face_mapping": {
                "top": "{name}_top",
                "bottom": "{name}_bottom",
                "side": "{name}"
            }
        },

        "sculk_shrieker": {
            "description": "幽匿尖啸体",
            "matching": ["sculk_shrieker"],
            "face_mapping": {
                "top": "{name}_top",
                "bottom": "{name}_bottom",
                "side": "{name}"
            }
        },

        "ores": {
            "description": "矿石",
            "matching": ["_ore"],
            "default_texture": "{name}"
        },

        "basalt": {
            "description": "玄武岩",
            "matching": ["basalt"],
            "face_mapping": {
                "top": "polished_basalt_top",
                "bottom": "polished_basalt_top",
                "side": "polished_basalt_side"
            }
        },

        "stained_glass": {
            "description": "染色玻璃",
            "matching": ["stained_glass"],
            "default_texture": "{name}"
        },

        "magma": {
            "description": "岩浆块",
            "matching": ["magma"],
            "default_texture": "magma"
        }
    },

    "default_mapping": {
        "top": "top",
        "front": "side",
        "side": "side",
        "bottom": "bottom"
    }
}